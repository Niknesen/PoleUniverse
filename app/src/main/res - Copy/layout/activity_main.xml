<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonChoreography"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/Choreography"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        />


    <Button
        android:id="@+id/buttonTechnique"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/Technique"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        />
    <Button
        android:id="@+id/buttonArtisctic"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/Artistic"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        />
    <Button
        android:id="@+id/buttonPenalty"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/Penalty"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        />


</LinearLayout>